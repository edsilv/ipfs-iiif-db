{
  "name": "simple-producer-consumer",
  "version": "0.0.1",
  "scripts": {
    "compile": "",
    "serve": "http-server -c-1 -p 12345 public",
    "compile": "npm run compile:producer && npm run compile:consumer",
    "compile:producer": "browserify src/producer.js -o public/js/producer.js",
    "compile:consumer": "browserify src/consumer.js -o public/js/consumer.js",
    "start": "npm run compile && npm run serve"
  },
  "license": "MIT",
  "devDependencies": {
    "browserify": "^14.3.0",
    "http-server": "^0.10.0"
  }
}
